---
interface Props {
  title: string;
  tagline: string;
  problem: string;
  solution: string;
  technical: string;
  tech: string[];
  github?: string;
  deployment?: string;
}

const { title, tagline, problem, solution, technical, tech, github, deployment } = Astro.props;
---

<div class="pt-24 pb-16 px-4 sm:px-6 lg:px-8 max-w-4xl mx-auto">
  <!-- Back link -->
  <a href="/#projects" class="inline-flex items-center gap-1 text-sm text-text-muted hover:text-text transition-colors mb-8">
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>
    Back to projects
  </a>

  <!-- Hero banner -->
  <div class="mb-12">
    <h1 class="text-3xl sm:text-4xl font-bold mb-3">{title}</h1>
    <p class="text-lg text-text-muted">{tagline}</p>

    <!-- Links -->
    <div class="flex gap-4 mt-6">
      {github && (
        <a href={github} target="_blank" rel="noopener" class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-bg-card border border-border hover:border-border-hover text-sm transition-colors">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/></svg>
          GitHub
        </a>
      )}
      {deployment && (
        <a href={deployment} target="_blank" rel="noopener" class="inline-flex items-center gap-2 px-4 py-2 rounded-lg bg-accent text-white text-sm hover:bg-accent/90 transition-colors">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
          Live Demo
        </a>
      )}
    </div>
  </div>

  <!-- Screenshot placeholder -->
  <div class="w-full h-64 sm:h-80 rounded-xl bg-bg-card border border-border flex items-center justify-center text-text-dim mb-12">
    Screenshot / Demo placeholder
  </div>

  <!-- Problem -->
  <div class="mb-10">
    <h2 class="text-xl font-semibold mb-3">The Problem</h2>
    <p class="text-text-muted leading-relaxed">{problem}</p>
  </div>

  <!-- Solution -->
  <div class="mb-10">
    <h2 class="text-xl font-semibold mb-3">The Solution</h2>
    <p class="text-text-muted leading-relaxed">{solution}</p>
  </div>

  <!-- Technical Deep-dive -->
  <div class="mb-10">
    <h2 class="text-xl font-semibold mb-3">Technical Deep-Dive</h2>
    <p class="text-text-muted leading-relaxed">{technical}</p>
  </div>

  <!-- Tech Stack -->
  <div class="mb-10">
    <h2 class="text-xl font-semibold mb-4">Tech Stack</h2>
    <div class="flex flex-wrap gap-2">
      {tech.map((t) => (
        <span class="px-3 py-1.5 rounded-lg bg-bg-card border border-border text-sm text-text-muted">{t}</span>
      ))}
    </div>
  </div>
</div>
