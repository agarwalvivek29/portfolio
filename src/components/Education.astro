---
const education = [
  {
    institution: 'Indian Institute of Technology, Madras',
    url: 'https://www.iitm.ac.in',
    degree: 'Bachelor of Science',
    major: 'Data Science and Applications',
  },
  {
    institution: 'Dayananda Sagar College of Engineering',
    url: 'https://www.dsce.edu.in',
    degree: 'Bachelor of Engineering',
    major: 'Electronics and Communication',
  },
];
---

<section id="education" class="py-20 px-4 sm:px-6 lg:px-8 max-w-6xl mx-auto fade-in">
  <h2 class="text-2xl sm:text-3xl font-bold mb-10">Education</h2>
  <div class="relative">
    <!-- Timeline line -->
    <div class="absolute left-0 md:left-4 top-0 bottom-0 w-px bg-border"></div>

    <div class="space-y-10">
      {education.map((edu) => (
        <div class="relative pl-8 md:pl-12">
          <!-- Timeline dot -->
          <div class="absolute left-0 md:left-4 top-1.5 w-2 h-2 rounded-full bg-accent -translate-x-1/2"></div>

          <div>
            <div class="flex flex-col sm:flex-row sm:items-baseline sm:gap-3 mb-1">
              {edu.url ? (
                <a href={edu.url} target="_blank" rel="noopener" class="text-lg font-semibold hover:text-accent transition-colors">{edu.institution}</a>
              ) : (
                <h3 class="text-lg font-semibold">{edu.institution}</h3>
              )}
            </div>
            <p class="text-sm text-text-muted">{edu.degree}</p>
            <p class="text-sm text-text-dim">{edu.major}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
