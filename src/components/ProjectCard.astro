---
interface Props {
  title: string;
  description: string;
  tech: string[];
  href: string;
}

const { title, description, tech, href } = Astro.props;
---

<a href={href} target="_blank" rel="noopener" class="block p-6 rounded-xl bg-bg-card border border-border hover:border-border-hover transition-all hover:-translate-y-0.5 group">
  <h3 class="text-lg font-semibold mb-2 group-hover:text-accent transition-colors">{title}</h3>
  <p class="text-sm text-text-muted leading-relaxed mb-4">{description}</p>
  <div class="flex flex-wrap gap-2">
    {tech.map((t) => (
      <span class="text-xs px-2 py-1 rounded-md bg-bg border border-border text-text-dim">{t}</span>
    ))}
  </div>
</a>
